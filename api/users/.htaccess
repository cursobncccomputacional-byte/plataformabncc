# .htaccess mínimo e compatível (evita 500 por diretivas não suportadas)
Options -Indexes

<IfModule mod_rewrite.c>
  RewriteEngine On
  RewriteBase /api/users/

  # Tudo que não for arquivo/pasta física vai para index.php
  RewriteCond %{REQUEST_FILENAME} !-f
  RewriteCond %{REQUEST_FILENAME} !-d
  RewriteRule ^ index.php [L,QSA]
</IfModule>

# CORS (opcional; também existe via api/config/cors.php)
<IfModule mod_headers.c>
  Header set Access-Control-Allow-Methods "GET, POST, PUT, PATCH, DELETE, OPTIONS"
  Header set Access-Control-Allow-Headers "Content-Type, Authorization, X-Requested-With, X-Session-ID"
</IfModule>
